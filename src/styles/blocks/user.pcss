.user-display{
    position: relative;
    display: flex;
    align-items: center;
    &-data{
        color: #fff;
    }

    &__avatar{
        padding-right: 30px;
    }

    &__name{
        font-size: 18px;
        font-weight: 700;
        font-size: 18px;
        margin-bottom: 12px;
    }

    &__position{
        opacity: .5;
        font-size: 16px;
        font-weight: 600;
    }
}