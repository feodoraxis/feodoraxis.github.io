.round-btn{
    width: 53px;
    height: 53px;
    border-radius: 50%;
    border: 2px solid #FFF;
    line-height: 53px;
    background-color: transparent;
    opacity: .6;
    &--left{
        margin-right: 28px;
        transform: rotate(180deg);
    }

    svg{
        width: 17px;
        fill: #FFF;
    }
    &.active{
        opacity: 1;
        
        &:hover{
            border-color: #FF9A00;
            svg{
                fill: #FF9A00;
            }
        }
    }
    
}